</head>
<body>
    <div class="header-panel" ng-controller="ButtonsControlCtrl">
        <ul style="margin: 0; padding: 0; list-style-image: none;">
            @if (Model.ItRequest.Status == 0)
            {
                if (User.IsInRole("ItBoss") || User.IsInRole("CallCenter"))
                {
                    <li class="button-control-panel"><a href="#" class="button-control-mdsize" ng-click="saverequest()">Назначить и уведомить</a></li>
                }
            }
            @if (Model.ItRequest.Status == 5 || Model.ItRequest.Status == 4)
            {
                if (User.IsInRole("ItWork") || User.IsInRole("ItBoss"))
                {
                    if (Model.User.FullName == Model.ItRequest.AssignTo || Model.User.FullName == Model.ItRequest.AssignBoss)
                    {
                        <li class="button-control-panel"><a href="#" class="button-control-smsize" ng-click="saverequest()">Сохранить</a></li>
                    }
                }
                if (User.IsInRole("CallCenter"))
                {
                    <li class="button-control-panel"><a href="#" class="button-control-smsize" ng-click="saverequest()">Сохранить</a></li>
                }
            }
            @if (Model.ItRequest.Status == 5 & Model.ItRequest.IsWorkingOn == 0)
            {
                if (User.IsInRole("ItWork"))
                {
                    if (Model.User.FullName == Model.ItRequest.AssignTo)
                    {
                        <li class="button-control-panel">@Html.ActionLink("Принять в работу", "Accept", "ItCallRequest", new {@requestid = Model.ItRequest.CallRequestId}, new {@class = "button-control-smsize"})</li>
                    }
                }
            }
            @if ((Model.ItRequest.Status == 5 || Model.ItRequest.Status == 4) & Model.ItRequest.IsWorkingOn == 1)
            {
                if (User.IsInRole("ItWork"))
                {
                    if (Model.User.FullName == Model.ItRequest.AssignTo)
                    {
                        <li class="button-control-panel"><a href="#" class="button-control-smsize" ng-click="openholdon()">Продлить заяку</a></li>
                    }
                }

            }
            @if (Model.ItRequest.Status == 9)
            {
                if (User.IsInRole("ItBoss"))
                {
                    if (Model.User.FullName == Model.ItRequest.AssignBoss)
                    {
                        <li class="button-control-panel"><a href="#" class="button-control-mdsize" ng-click="openreturntoassigner()">Вернуть исполнителю</a></li>
                    }
                }
            }
            @if ((Model.ItRequest.Status == 5 || Model.ItRequest.Status == 4) & Model.ItRequest.IsWorkingOn == 1)
            {
                if (User.IsInRole("ItWork"))
                {
                    if (Model.User.FullName == Model.ItRequest.AssignTo)
                    {
                        <li class="button-control-panel">@Html.ActionLink("Отправить на подтверждение", "SendForAprove", "ItCallRequest", new {@requestid = Model.ItRequest.CallRequestId}, new {@class = "button-control-lgsize"})</li>
                    }
                }
            }
            @if (Model.ItRequest.Status == 9)
            {
                if (User.IsInRole("ItBoss"))
                {
                    if (Model.User.FullName == Model.ItRequest.AssignBoss)
                    {
                        <li class="button-control-panel">@Html.ActionLink("Закрыть заявку", "CloseRequest", "ItCallRequest", new {@requestid = Model.ItRequest.CallRequestId}, new {@class = "button-control-smsize"})</li>
                    }
                }
            }
            @if ((Model.ItRequest.Status == 5 || Model.ItRequest.Status == 4) & Model.ItRequest.IsWorkingOn == 1)
            {
                if (User.IsInRole("ItWork") || User.IsInRole("ItBoss"))
                {
                    if (Model.User.FullName == Model.ItRequest.AssignBoss || Model.User.FullName == Model.ItRequest.AssignTo)
                    {
                        <li class="button-control-panel"><a href="#" class="button-control-smsize" ng-click="opendenyrequest()">Отклонить</a></li>
                    }
                }
            }
        </ul>
